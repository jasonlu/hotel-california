<h1>Listing room_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bed type</th>
      <th>Base rate</th>
      <th>Non smoking</th>
      <th>Pets welcome</th>
      <th>Family welcome</th>
      <th>Beds</th>
      <th>Tags</th>
      <th>Capacity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%= room_type.name %></td>
        <td><%= room_type.bed_type %></td>
        <td><%= room_type.base_rate %></td>
        <td><%= room_type.non_smoking %></td>
        <td><%= room_type.pets_welcome %></td>
        <td><%= room_type.family_welcome %></td>
        <td><%= room_type.beds %></td>
        <td><%= room_type.tags %></td>
        <td><%= room_type.capacity %></td>
        <td><%= link_to 'Show', room_type %></td>
        <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
        <td><%= link_to 'Destroy', room_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

