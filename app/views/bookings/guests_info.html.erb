<h1>Guest Information</h1>
<div class="row login-or-newuser">
<div class="col-sm-6">
  <p class="alert alert-info">
    Please enter guest name and email to setup a new account
  </p>
<%= form_for(@customer, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :guest do |g| %>
  <div class="form-group">
    <%= g.label :fname, "First name", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= g.text_field :fname, :class => "form-control", :placeholder => "John" %>
    </div>
  </div>

  <div class="form-group">
    <%= g.label :lname, "Last name", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= g.text_field :lname, :class => "form-control", :placeholder => "Smith" %>
    </div>
  </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label :email, "E Mail", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, :class => "form-control", :placeholder => "" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, :class => "form-control", :placeholder => "" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-4">
      <%= f.submit "Create account", :class => "btn btn-primary" %>
    </div>
  </div>
  
<% end %>
</div>

<div class="col-sm-6">
  <p class="alert alert-success">
    Or login with exsiting account, enter the email and password below.
  </p>
<%= form_for(@customer, :url => {:action => "login", :controller => "customers"}, :html => {:class => 'form-horizontal'}) do |c| %>
  <div class="form-group">
    <%= c.label :email, "E Mail", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= c.email_field :email, :class => "form-control", :placeholder => "" %>
    </div>
  </div>
  <div class="form-group">
    <%= c.label :password, "Password", :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= c.password_field :password, :class => "form-control", :placeholder => "" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-4">
      <%= c.submit "Login", :class => "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>
</div>