<div class="page-header">
  <%= link_to new_room_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Room
  <% end %>
  <h1>Listing rooms</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Room number</th>
            <th>Room type</th>
            <th>Bed type</th>
            <th>Base rate</th>
            <th>Non smoking</th>
            <th>Pets welcome</th>
            <th>Family welcome</th>
            <th>Beds</th>
            <th>Tags</th>
            <th>Capacity</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @rooms) do |room| %>
            <td><%= room.room_number %></td>
            <td><%= room.room_type_id %></td>
            <td><%= room.bed_type %></td>
            <td><%= room.base_rate %></td>
            <td><%= room.non_smoking %></td>
            <td><%= room.pets_welcome %></td>
            <td><%= room.family_welcome %></td>
            <td><%= room.beds %></td>
            <td><%= room.tags %></td>
            <td><%= room.capacity %></td>
            <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
