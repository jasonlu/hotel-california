<%= form_for(@payment, :url => {:action =>  'create'}, :html => {:class => 'form-horizontal', :method => 'post'}) do |f| %>
  <div class="hidden">
    <%= hidden_field(:booking, :checkin, :value => params[:checkin]) %>
    <%= hidden_field(:booking, :checkout, :value => params[:checkout]) %>
    <%= hidden_field(:booking, :room_type, :value => params[:room_type]) %>
  </div>
  <% if @payment.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :credit_card_no, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :credit_card_no, :class => "form-control", :placeholder => "xxxx-xxxx-xxxx-xxxx" %>
    </div>
  </div>
  <%= f.fields_for :billing_address do |b| %>
  <div class="form-group">
    <%= b.label :receiver, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :receiver, :class => "form-control", :placeholder => "JOHN SMITH" %>
    </div>
  </div>
  <div class="form-group">
    <%= b.label :street1, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :street1, :class => "form-control", :placeholder => "Street address" %>
    </div>
  </div>
  <div class="form-group">
    <%= b.label :street2, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :street2, :class => "form-control", :placeholder => "Street address" %>
    </div>
  </div>
  <div class="form-group">
    <%= b.label :city, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :city, :class => "form-control", :placeholder => "City" %>
    </div>
  </div>
  <div class="form-group">
    <%= b.label :state, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :state, :class => "form-control", :placeholder => "State" %>
    </div>
  </div>
  <div class="form-group">
    <%= b.label :zip, :class => "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= b.text_field :zip, :class => "form-control", :placeholder => "Zip Code" %>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-4">
      <%= f.submit "Complete reservation", :class => "btn btn-primary" %> or <%= link_to 'Cancel the reservation', root_path %>
    </div>
  </div>
<% end %>
